<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <!-- Título -->
    <TextView
        android:id="@+id/tvDialogTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Filtrar Búsqueda"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Grupo de orden -->
    <RadioGroup
        android:id="@+id/radioGroupOrder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvDialogTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/radioDefault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Predeterminado" />

        <RadioButton
            android:id="@+id/radioUpdated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Más Actualizado" />

        <RadioButton
            android:id="@+id/radioAdded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Más Añadido" />

        <RadioButton
            android:id="@+id/radioTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Por Título" />

        <RadioButton
            android:id="@+id/radioRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Por Calificación" />
    </RadioGroup>


    <!-- Tipos -->
    <TextView
        android:id="@+id/labelTypes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipos"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/radioGroupOrder"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flowTypes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:flow_wrapMode="chain"
        app:flow_horizontalGap="8dp"
        app:flow_verticalGap="8dp"
        app:constraint_referenced_ids="checkboxTv,checkboxMovie,checkboxSpecial,checkboxOva"
        app:layout_constraintTop_toBottomOf="@id/labelTypes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <CheckBox android:id="@+id/checkboxTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="TV" />
    <CheckBox android:id="@+id/checkboxMovie" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Película" />
    <CheckBox android:id="@+id/checkboxSpecial" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Especial" />
    <CheckBox android:id="@+id/checkboxOva" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="OVA" />

    <!-- Géneros -->
    <TextView
        android:id="@+id/labelGenres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Géneros"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/flowTypes"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flowGenres"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:flow_wrapMode="chain"
        app:flow_horizontalGap="8dp"
        app:flow_verticalGap="8dp"
        app:constraint_referenced_ids="checkboxAction,checkboxComedy,checkboxDrama,checkboxFantasy"
        app:layout_constraintTop_toBottomOf="@id/labelGenres"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <CheckBox android:id="@+id/checkboxAction" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Acción" />
    <CheckBox android:id="@+id/checkboxComedy" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Comedia" />
    <CheckBox android:id="@+id/checkboxDrama" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Drama" />
    <CheckBox android:id="@+id/checkboxFantasy" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Fantasía" />

    <!-- Estados -->
    <TextView
        android:id="@+id/labelStatuses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estado"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/flowGenres"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flowStatuses"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:flow_wrapMode="chain"
        app:flow_horizontalGap="8dp"
        app:flow_verticalGap="8dp"
        app:constraint_referenced_ids="checkboxOnAir,checkboxFinished,checkboxNotAired"
        app:layout_constraintTop_toBottomOf="@id/labelStatuses"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <CheckBox android:id="@+id/checkboxOnAir" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="En emisión" />
    <CheckBox android:id="@+id/checkboxFinished" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Terminado" />
    <CheckBox android:id="@+id/checkboxNotAired" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="No Emitido" />

    <!-- Botones -->
    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/flowStatuses"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnApply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aplicar" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

